<script>
    function freeaddon_avatar_selected(sId) {
        var oImg = document.getElementsByName('freeaddon_avatar_img');
        var oSid = document.getElementById('freeaddon_avatar_id');
        for (var i = 0; i < oImg.length; i++) {
            if (oImg[i].id == sId) {
                if (oSid.value == sId) {
                    oImg[i].className = '';
                    oSid.value = 0;
                } else {
                    oImg[i].className = 'avatar_checked';
                    oSid.value = sId;
                }
            } else {
                oImg[i].className = '';
            }
        }
        
        if (oSid.value > 0){
            $('freeaddon_avatar_id').className = 'px';
            $('chk_freeaddon_avatar_id').innerHTML = '';
        }else{
            $('freeaddon_avatar_id').className = 'px er';
            $('chk_freeaddon_avatar_id').innerHTML = '请选择头像';
        }
        
    }
</script>
