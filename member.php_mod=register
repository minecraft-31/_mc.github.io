<script type="text/javascript">
var ignoreEmail = false;
showBBRule();
addMailEvent($('mcbbsemail'));
function showBBRule() {
showDialog($('layer_bbrule').innerHTML, 'info', 'Minecraft(我的世界)中文论坛 网站服务条款');
$('fwin_dialog_close').style.display = 'none';
}
function showEULA() {
showDialog(
